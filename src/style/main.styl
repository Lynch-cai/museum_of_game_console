*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    pointer-events none

canvas
    position absolute
    top 0
    left 0
    background-image radial-gradient(#ffffff 2%, transparent 2%), radial-gradient(#ffffff 2%, transparent 2%)
    background-color #222222
    background-position 0 0, 25px 25px
    background-size 50px 50px



.container_intro
    z-index 9999
    display flex
    flex-direction column
    align-items center
    justify-content center
    position relative
    margin 0
    padding 0
    width 100vw
    height 100vh
    background #000000
    color white
    opacity 1
    transition 1s opacity ease
    will-change opacity
    pointer-events none
    .loader_container
        position absolute
        width 100vw
        height 100vh
        display flex
        justify-content center
        align-items center
        .loader_text
            color white
            font-size 4rem
            opacity 1
            transition 0.5s opacity ease
            will-change opacity
        .loader_text.hide
            opacity 0
    .main_text_intro
        z-index 9999
        margin-bottom 3em
        font-size 2rem
        opacity 1
        transition 2s opacity ease
        will-change opacity
    .main_text_intro.blink
        opacity 0
    .img_container
        margin 10vh
        display flex
        justify-content center
        align-items center
        width 100%
        height 100%
        opacity 0
        transition 0.5s opacity ease
        will-change opacity
        .click_container
            display flex
            flex-direction column
            justify-content center
            align-items center
            .img_click
                z-index 9999
                display block
                height 16rem
                padding 3rem
            p
                font-size 1rem
        .spacebar_container
            display flex
            flex-direction column
            justify-content center
            align-items center
            .img_spacebar
                z-index 9999
                display block
                height 16rem
                width auto
                padding 3rem
            p
                font-size 1rem
    .img_container.show
        opacity 1
    .pedagogical_mention
        position: absolute
        top 2.5vw
.container_intro.hide
    opacity 0